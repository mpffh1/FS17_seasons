<!--Sample seasons_growth.xml file to customise growth in maps-->

<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<growth>
    <defaultFruits>
        <defaultFruit fruitName="newFruit" maxSprayGrowthState="4"/>
    </defaultFruits>
    <growthTransitions>
        <gt growthTransitionNum="1"> <!--late winter to early spring-->
            <fruit fruitName="newFruit"  normalGrowthState="1" normalGrowthMaxState="3"/>
        </gt>
        <gt growthTransitionNum="2"> <!--early spring to mid spring-->
            <fruit fruitName="newFruit"  normalGrowthState="1"  normalGrowthMaxState="3"/>
        </gt>
        <gt growthTransitionNum="3"> <!--mid spring to late spring-->
            <fruit fruitName="newFruit"  normalGrowthState="1" normalGrowthMaxState="3"/>
        </gt>
        <gt growthTransitionNum="4"> <!--late spring to early summer-->
            <fruit fruitName="newFruit"  normalGrowthState="1" normalGrowthMaxState="4"/>
        </gt>
        <gt growthTransitionNum="5"> <!--early summer to mid summer-->
            <fruit fruitName="newFruit"  normalGrowthState="2" normalGrowthMaxState="5" setGrowthState="1"  desiredGrowthState="CUT"/>
        </gt>
        <gt growthTransitionNum="6"> <!--mid summer to late summer-->
            <fruit fruitName="newFruit"  normalGrowthState="6" extraGrowthMinState="3" extraGrowthMaxState="5" extraGrowthFactor="2" setGrowthState="1"  desiredGrowthState="CUT"/>
        </gt>
        <gt growthTransitionNum="7"> <!--late summer to early autumn-->
            <fruit fruitName="newFruit"  normalGrowthState="5" normalGrowthMaxState="6" setGrowthState="1"  desiredGrowthState="CUT"/>
        </gt>
        <gt growthTransitionNum="8"> <!--early autumn to mid autumn-->
            <fruit fruitName="newFruit"  normalGrowthState="1" normalGrowthMaxState="6"/>
        </gt>
        <gt growthTransitionNum="9"> <!--mid autumn to late autumn-->
            <fruit fruitName="newFruit"  normalGrowthState="1" normalGrowthMaxState="2"/>
        </gt>
        <gt growthTransitionNum="10"> <!--late autumn to early winter-->
            <fruit fruitName="newFruit"  setGrowthState="4"  setGrowthMaxState="MAX_STATE" desiredGrowthState="WITHERED"/>
        </gt>
        <gt growthTransitionNum="11"/> <!--early winter to mid winter-->
        <gt growthTransitionNum="12"/> <!--mid winter to late winter-->
        <gt growthTransitionNum="FIRST_LOAD_TRANSITION">
            <fruit fruitName="newFruit" setGrowthState="1" setGrowthMaxState="MAX_STATE" desiredGrowthState="CUT"/>
        </gt>
    </growthTransitions>
    <germination>
        <fruit fruitName="newFruit" germinateTemp="5" />
    </germination>
</growth>


